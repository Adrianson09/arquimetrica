---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'
const posts = await getCollection('blog')
---
<BaseLayout title="Blog — Arquimétrica" description="Ideas, experiencias y mejores prácticas de arquitectura y gestión de proyectos.">
<section class="container-px py-16">
<h1 class="text-3xl font-bold text-[var(--navy)]">Blog</h1>
<div class="mt-8 grid md:grid-cols-2 gap-8">
{posts.map(p => (
<article class="rounded-2xl border border-slate-200 p-6 bg-white">
<a href={`/blog/${p.slug}`} class="text-2xl font-semibold text-[var(--azul)] hover:underline">{p.data.title}</a>
<p class="mt-2 text-slate-700">{p.data.description}</p>
<p class="mt-2 text-sm text-slate-500">{new Date(p.data.date).toLocaleDateString('es-CR')}</p>
</article>
))}
</div>
</section>
</BaseLayout>